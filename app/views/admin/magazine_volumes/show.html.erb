<p id="notice"><%= notice %></p>

<p>
  <strong>Magazine:</strong>
  <%= Magazine.all.find_by(id: @magazine_volume.magazine_id).name %>
</p>

<p>
  <strong>Number:</strong>
  <%= @magazine_volume.number %>
</p>

<p>
  <strong>Published:</strong>
  <%= @magazine_volume.published %>
</p>

<%= link_to 'Edit', edit_admin_magazine_volume_path(@magazine_volume) %> |
<%= link_to 'Back', admin_magazine_volumes_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Number</th>
      <th>Subtitle</th>
      <th>Total point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comic_chapters.each do |comic_chapter| %>
      <tr>
        <td><%= Comic.find(comic_chapter.comic_id).title %></td>
        <td><%= comic_chapter.number %></td>
        <td><%= comic_chapter.subtitle %></td>
        <td><%= comic_chapter.total_point %></td>
        <td><%= link_to 'Show', admin_comic_chapter_path(comic_chapter) %></td>
        <td><%= link_to 'Edit', edit_admin_comic_chapter_path(comic_chapter) %></td>
        <td><%= link_to 'Destroy', admin_comic_chapter_path(comic_chapter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
